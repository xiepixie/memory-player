{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "fs:read-files",
    "fs:write-files",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "**/*" }
      ]
    },
    {
      "identifier": "fs:allow-watch",
      "allow": [
        { "path": "**/*" }
      ]
    },
    "shell:allow-open",
    "dialog:default",
    "opener:default"
  ]
}
