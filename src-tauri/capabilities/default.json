{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    "fs:read-all",
    "fs:write-all",
    "fs:allow-watch",
    "fs:allow-unwatch",
    "dialog:default",
    "shell:default",
    {
      "identifier": "fs:scope",
      "allow": ["**"]
    }
  ]
}
